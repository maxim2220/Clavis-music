<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fracments.Nots_and_tabsFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Скрипичный ключ"
                android:textSize="22dp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/skripich_kluch_notsandtabs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/w48nots_scripich"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Бассовый ключ"
                android:textSize="22dp"
                android:textStyle="italic" />
            <ImageView
                android:id="@+id/bazz_kluch_notsandtabs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/w48nots_bazzz"/>


        </LinearLayout>

    </ScrollView>


</FrameLayout>